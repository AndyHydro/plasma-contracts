{
  "name": "plasma-cash",
  "version": "1.0.0",
  "description": "Elph Network's Plasma Cash root chain implementation.",
  "main": "truffle.js",
  "repository": "https://github.com/elphnetwork/plasma-cash",
  "author": "Elph Network",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "dotenv": "^6.0.0",
    "eth-gas-reporter": "^0.1.12",
    "ethereumjs-util": "^5.2.0",
    "ganache-cli": "^6.1.8",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "openzeppelin-solidity": "1.10.0",
    "rimraf": "^2.6.2",
    "rlp": "^2.1.0",
    "solc": "^0.4.24",
    "solium": "^1.1.8",
    "solium-plugin-zeppelin": "^0.0.2",
    "truffle": "^4.1.14",
    "truffle-hdwallet-provider": "^0.0.6",
    "web3-utils": "^1.0.0-beta.36"
  },
  "scripts": {
    "blockchain:start": "./scripts/ganache-cli.sh 8545",
    "blockchain:stop": "lsof -t -i tcp:8545 | xargs kill",
    "clean": "$(yarn bin)/rimraf build",
    "build": "yarn run clean && truffle compile",
    "deploy": "truffle migrate --reset --network development",
    "deploy:rinkeby": "truffle migrate --reset --network rinkeby",
    "test": "truffle compile --reset && truffle test",
    "test:gas": "GAS_REPORTER=true yarn test",
    "lint": "$(yarn bin)/solium -d ./contracts",
    "lint:fix": "$(yarn bin)/solium -d ./contracts --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.sol": [
      "solium --fix --file",
      "bash ./scripts/abigen-go-rootchain.sh",
      "bash ./scripts/abigen-go-samplenfts.sh",
      "cd .. && git add"
    ]
  }
}
